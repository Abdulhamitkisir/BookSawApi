@model BookSawApi.WebUI.Dtos.ProductDtos.CreateProductDto
@{
    ViewData["Title"] = "CreateBook";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}

<h3>Create Book</h3>

<form asp-action="CreateBook" method="post">
    <div class="form-group">
        <label for="Category">Choose Category</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Author">Choose Author</label>
        @Html.DropDownListFor(x => x.AuthorId, (List<SelectListItem>)ViewBag.Authors, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="ProductName">Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ProductDescription">Product Description</label>
        <textarea asp-for="ProductDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="ProductPrice">Product Price</label>
        <input type="number" asp-for="ProductPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ProductStock">Product Stock</label>
        <input type="number" asp-for="ProductStock" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ProductStock">Cover Url</label>
        <input type="text" asp-for="ProductImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save New Book</button>
</form>
