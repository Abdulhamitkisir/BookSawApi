@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateBook";
    Layout = "~/Areas/Admin/Views/AdminLayout/AdminLayout.cshtml";
}

<h1>Update Book</h1>


<form method="post">
         <input type="hidden" asp-for="ProductId" />  
       
        <label for="Category">Choose Category</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
   
        <label for="Author">Choose Author</label>
        @Html.DropDownListFor(x => x.AuthorId, (List<SelectListItem>)ViewBag.Authors, new { @class = "form-control" })
  
        <label for="ProductName">Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    
        <label for="ProductDescription">Product Description</label>
        <textarea asp-for="ProductDescription" class="form-control"></textarea>
   
        <label for="ProductPrice">Product Price</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
 
        <label for="ProductStock">Product Stock</label>
        <input type="number" asp-for="ProductStock" class="form-control" />
    
        <label for="ProductStock">Cover Url</label>
        <input type="text" asp-for="ProductImageUrl" class="form-control" />
   

    <button type="submit" class="btn btn-primary">Save Chenges</button>
</form>
